pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        echo 'Starting the build...'
        sh 'docker build -t api .'
      }
    }

    stage('Test') {
      steps {
        sh 'docker run api npm test'
      }
    }

    stage('Deploy') {
      steps {
        sh 'docker push gaellabreu/api:latest'
      }
    }
  }
}
